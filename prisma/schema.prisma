generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Referral {
  id            String   @id @default(cuid())
  clientName    String
  referrerEmail String?
  referrerPhone String?
  status        String   @default("PENDING")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([referrerEmail])
  @@index([referrerPhone])
}